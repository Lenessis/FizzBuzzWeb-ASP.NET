@page
@model FizzBuzzWeb.Pages.IndexYearModel
@{
    <p> <i>Zadanie dotyczące roku przestępnego. Dane przetrzymywane w sesji można zobaczyć z zakładce Saved in session</i></p>

    <form method="post">
        <div class="form-group">
            <label asp-for="year.year"></label>
            <input asp-for="year.year" class="form-control" />
            <span asp-validation-for="year.year" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="year.name"></label>
            <input asp-for="year.name" class="form-control" />
            <span asp-validation-for="year.name" class="text-danger"></span>
        </div>

        <button class="btn btn-primary" type="submit">Zatwierdź</button>

    </form>
    @if (!Model.hide)
    {
        <p class="alert alert-info">
            @ViewData["user"]

            @if (Model.gender)
            {
                <span>urodziła się</span>
            }
            else
            {
                <span>urodził się</span>
            }

            w @ViewData["extraY"] roku.


            @if (Model.extra)
            {
                <span>Był to rok przestępny.</span>
            }
            else
            {
                <span>Nie był to rok przestępny.</span>
            }
        </p>
    }


}
